<div class="container">
	<div class="row">
		<% if flash[:success] %>
			<div class="col-md-12">
				<div class="alert alert-primary alert-dismissible fade show" role="alert">
				  <%= flash[:success] %>
				</div>
			</div>
		<% end %>
		<div class="media">
			<img class="d-flex" src=<%= @article.coverphoto %> width="128" height="160">
			<div class="media-body">
				<h5 class="mt-0"><%= @article.title %></h5>
				<p><%= @article.body %></p>
			</div>
		</div>
		<div class="col-md-12">
			<h2>Comments</h2>
			<%= render @article.comments %>

			<h3>Add a comment:</h3>
			<%= render 'comments/form' %>

			<%= link_to 'Edit', edit_article_path, class: "btn btn-info mt-3" %>
			<%= link_to 'Back', articles_path, class: "btn btn-secondary mt-3" %>
		</div>
	</div>
</div>

