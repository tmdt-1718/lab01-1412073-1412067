<h1>Listing all articles</h1>

<%# <i><%= link_to 'Home', controller: 'welcome', action: 'index' %\></i> %>
<%# <i><%= link_to 'New article', new_article_path %\></i> %>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="2"></th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			<td><i><%= link_to 'Show', article_path(article) %></i></td>
			<td><i><%= link_to 'Edit', edit_article_path(article) %></i></td>
			<td><i><%= link_to 'Delete', article_path(article),
				method: :delete %></i></td>
			<%-# data: { confirm: 'Are you sure about this?' } -%>
		</tr>
	<% end %>
</table>
