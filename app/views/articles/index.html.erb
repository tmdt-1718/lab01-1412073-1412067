<div class="container">
	<div class="row">
		<h2 class="text-center col-md-12 pt-3 pb-3">All articles</h2>
		<i class="text-center col-md-12 pb-3"><%= link_to 'New article', new_article_path, :class => "btn btn-success" %></i>

		<% @articles.each do |article| %>
			<div class="col-md-4 pb-3">
			<div class="card">
				<img class="card-img-top" src=<%= article.coverphoto %> alt="Card image cap">
				<div class="card-body">
					<h4 class="card-title"><%= article.title %></h4>
					<p class="card-text"><%= truncate(article.body, :length=> 100) %></p>

					<%= link_to 'Show', article_path(article), :class => "btn btn-primary" %>
					<%= link_to 'Edit', edit_article_path(article), :class => "btn btn-info" %>
					<%= link_to 'Delete', article_path(article), method: :delete, :class => "btn btn-danger" %>
				</div>
			</div>
		</div>
	<% end %>	

	</div>
</div>

